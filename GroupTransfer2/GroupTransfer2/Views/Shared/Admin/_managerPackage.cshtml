<section class="page-section" id="managerpackage">
    <div class="container">
        <div class="row">
            <div class="col col-md-6 rounded-left titlemanagerprice">
                <label>Agregar uno</label>
            </div>
            <div class="col col-md-6 rounded-right titlemanagerprice">
                <label>Importar Excell</label>
            </div>
        </div>
        <div class="row">
            <div class="col col-md-6 text-center">

                <button type="button" id="rowManagerPackageNew" class="btn btn-success rounded-circle" data-toggle="modal" data-target="#ModalPackage" title="Agregar">
