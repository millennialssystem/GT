<!-- Modal -->
<div class="modal fade" id="ModalPackage" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Agregar Nuevo Status</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="container">
                    <div class="row p-2" id="rowRefManagerPackageNew">

                        <div class="col-sm">
                            <input type="text" id="refManagerPackageNew" class="form-control" placeholder="Referencia">
                        </div>
                    </div>

                    <div class="row p-2" id="rowDetailManagerPackageNew">
                        <div class="col-sm">
                            <input type="text" id="detailManagerPackageNew" class="form-control" placeholder="Detalles">
                        </div>
                    </div>

                    <div class="row p-2" id="rowProgressManagerPackageNew">
                        <div class="col-sm">
                            <input type="text" id="progressManagerPackageNew" class="form-control" placeholder="Progreso">
                        </div>
                    </div>
                </div>
            </div>


            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="BtnAddPackage" data-dismiss="modal" onclick="AddPackage()">Guardar</button>
            </div>
        </div>
    </div>
</div>